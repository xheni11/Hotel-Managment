@model IEnumerable<M19G1.Models.BookingElementViewModel>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    <h3>@TempData["Result"]</h3>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomList)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.rate)
        </th>
        <th></th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomList)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rate)
                </td>
                <td>
                    @Html.ActionLink("Add Facility", "AddFacility", new { id = item.Id }) |
                    @Html.ActionLink("Add DriverService", "AddService",new { id = item.Id}) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                    @if (item.Cancelable)
                    {
                        <text> | </text>
                        @Html.ActionLink("  Cancel", "CancelBooking", new { id = item.Id })
                    }

                </td>
            </tr>
        }}

</table>
